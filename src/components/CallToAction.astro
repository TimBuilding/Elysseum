---
import Button from '@/components/ui/button';
---

<div
  class='w-full h-[700px] flex flex-col items-center justify-center bg-cover relative lg:h-[500px]'
  style="background-image: url('/src/images/Call-to-action.jpg')"
>
  <div class='absolute bg-black bg-opacity-70 z-5 h-full w-full'></div>
  <div class='flex justify-center w-full h-full backdrop-blur-3xl'>
    <div
      class='hidden h-full w-1/2 bg-cover object-center lg:flex'
      style="background-image: url('/src/images/Call-to-action.jpg')"
    >
    </div>
    <div class='p-16 lg:w-1/2 lg:flex lg:flex-col lg:justify-center'>
      <div
        class='h-1/3 w-full rounded-xl bg-cover md:h-1/2 lg:hidden'
        style="background-image: url('/src/images/Call-to-action.jpg')"
      >
      </div>
      <div class='px-8 py-12 gap-y-6 flex flex-col w-full z-10 lg:pt-4'>
        <p class='font-bold text-2xl lg:text-3xl xl:text-4xl'>Get in Touch</p>
        <span
          class='text-justify leading-8 text-sm md:text-lg lg:text-lg lg:leading-8 md:font-medium xl:text-2xl'
          >Whether you are a small startup or an established enterprise,
          Elysseum supports your digital transformation journey. partner with us
          to unlock technology's full potential and achieve sustainable growth
          in today's dynamic business landscape.</span
        >
      </div>
      <div class='flex flex-row justify-center z-10'>
          <Button>Contact Us</Button>
      </div>
    </div>
  </div>
</div>
