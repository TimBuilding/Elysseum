---
import { Facebook, Twitter, Linkedin } from 'lucide-react';
---

<footer>
  <div
    class='lg:hidden flex flex-col items-center py-16 px-16 md:px-24 space-y-4'
  >
    <div class='flex flex-col w-2/3 items-center space-y-2'>
      <img src='src/images/Logo.png' class='w-1/3' />
      <span class='font-bold text-sm'>Elysseum</span>
      <span class='text-xs text-center w-full md:w-3/4'
        >Empowering Businesses to Succeed with advanced IT Solutions.</span
      >
      <div class='flex flex-row pt-10 space-x-10'>
        <Facebook />
        <Twitter />
        <Linkedin />
      </div>
    </div>
    <div class='w-full flex justify-between items-start space-x-10 pt-8 px-10'>
      <div class="w-2/3">
        <div class='flex flex-col'>
          <span class='font-bold text-[15px]'>Site Map</span>
          <a href='/' class='group relative'>
            <span class="text-[12px]">Home</span>
          </a>
          <a href='/aboutUs' class='group relative'>
            <span class="text-[12px]">About Us</span>
          </a>
          <a href='/service' class='group relative'>
            <span class="text-[12px]">Services</span>
          </a>
          <a href='/contact' class='group relative'>
            <span class="text-[12px]">Contact Us</span>
          </a>
        </div>
        <div class='flex flex-col space-y-8 pt-4'>
          <div class='flex flex-col'>
            <span class='font-bold text-[15px]'>Office Hours</span>
            <span class='pt-4 text-[12px]'>9:00 AM - 6:00 PM (CST)</span>
            <span class="text-[12px]">Monday to Friday</span>
            <span class="text-[12px]">excluding major holidays</span>
          </div>
        </div>
      </div>
      <div class='flex flex-col justify-start items-start'>
        <div class='flex flex-col'>
          <span class='font-bold text-[15px]'>Get In Touch</span>
          <div class='w-2/3'>
            <span class='text-[12px]'>General Inquiries:</span>
            <span class='text-xs'>info@elysseumgroup.com</span>
            <span class='text-[10px]'>[ +1-XXX-XXX-XXXX ]</span>
          </div>
          <div class='pt-4 w-2/3'>
            <span class='text-[12px] pt-4'>Sales & Business Development:</span>
            <span class='text-xs'>sales@elysseumgroup.com</span>
            <span class='text-[10px]'>[ +1-XXX-XXX-XXXX ]</span>
          </div>
          <div class='sm:hidden w-2/3 flex flex-col pt-4'>
            <span class='text-[12px]'>Technical Support:</span>
            <span class='text-xs'>support@elysseumgroup.com</span>
            <span class='text-[10px]'>[ +1-XXX-XXX-XXXX ]</span>
          </div>
        </div>
      </div>
      <div class='hidden w-1/4 sm:flex flex-col space-y-2 pt-6 h-56'>
        <span class='text-[12px]'>Technical Support:</span>
        <span class='text-xs'>support@elysseumgroup.com</span>
        <span class='text-[10px]'>[ +1-XXX-XXX-XXXX ]</span>
      </div>
    </div>
  </div>


  <div class='hidden justify-between lg:flex flex-row py-16 lg:px-24 xl:px-36 space-y-4'>
    <div class='flex flex-col w-1/4 items-center space-y-2'>
      <img src='src/images/Logo.png' class='max-w-64' />
      <span class='font-bold lg:text-xl xl:text-2xl'>Elysseum</span>
      <span class='text-center w-3/4 lg:text-sm xl:text-base'
        >Empowering Businesses to Succeed with advanced IT Solutions.</span
      >
      <div class='flex flex-row pt-10 space-x-10'>
        <Facebook />
        <Twitter />
        <Linkedin />
      </div>
    </div>
    <div class='w-1/5 flex flex-col py-16 ml-10 pl-16 space-y-4'>
      <span class='font-bold lg:text-lg xl:text-xl'>Site Map</span>
      <div class='flex flex-col space-y-2'>
        <a href='/' class='group relative'>
          <span>Home</span>
        </a>
        <a href='/aboutUs' class='group relative'>
          <span>About Us</span>
        </a>
        <a href='/service' class='group relative'>
          <span>Services</span>
        </a>
        <a href='/contact' class='group relative'>
          <span>Contact Us</span>
        </a>
      </div>
      <div class='flex flex-col space-y-8'>
        <div class='flex flex-col pt-8'>
          <span class='font-bold lg:text-lg xl:text-xl'>Office Hours</span>
          <span class='pt-4'>9:00 AM - 6:00 PM (CST)</span>
          <span>Monday to Friday</span>
          <span>excluding major holidays</span>
        </div>
      </div>
    </div>
    <div class='w-1/5 flex flex-col py-16 space-y-4'>
      <div class='flex flex-col space-y-4 w-1/2'>
        <span class='font-bold lg:text-lg xl:text-xl'>Get In Touch</span>
        <div class='pt-4'>
          <span>General Inquiries:</span>
          <span class='lg:text-xs xl:text-sm'>info@elysseumgroup.com</span>
          <span class='lg:text-xs xl:text-sm'>[ +1-XXX-XXX-XXXX ]</span>
        </div>
        <div class='pt-4'>
          <span class='pt-4'>Sales & Business Development:</span>
          <span class='lg:text-xs xl:text-sm'>sales@elysseumgroup.com</span>
          <span class='lg:text-xs xl:text-sm'>[ +1-XXX-XXX-XXXX ]</span>
        </div>
      </div>
    </div>
    <div class='-ml-16 w-1/5 flex flex-col py-28 space-y-1'>
      <span class='lg:pt-2 xl:pt-8 2xl:pt-2'>Technical Support:</span>
      <span class='lg:text-xs xl:text-sm'>support@elysseumgroup.com</span>
      <span class='lg:text-xs xl:text-sm'>[ +1-XXX-XXX-XXXX ]</span>
    </div>
  </div>
  <div
    class='flex flex-row items-center justify-center w-full font-medium text-white text-center text-xs py-10'
  >
    <span class='flex'> Copyright &copy; </span>
    <span id='copyright' class='flex'>
      <script>
        document
          .getElementById('copyright')
          .appendChild(
            document.createTextNode(new Date().getFullYear().toString())
          );
      </script>
    </span>
    <span class='flex'> &nbsp;Elysseum </span>
  </div>
</footer>
