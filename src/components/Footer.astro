---
import { Facebook, Twitter, Linkedin } from 'lucide-react';
---

<footer>
  <div class='flex flex-row py-16 px-36 space-y-4'>
    <div class='flex flex-col w-1/4 items-center space-y-2'>
      <img src='src/images/Logo.png' class='w-l/2 xl:w-1/3' />
      <span class='font-bold text-2xl'>Elysseum</span>
      <span class='text-center w-3/4'
        >Empowering Businesses to Succeed with advanced IT Solutions.</span
      >
      <div class='flex flex-row pt-10 space-x-10'>
        <Facebook />
        <Twitter />
        <Linkedin />
      </div>
    </div>
    <div class='w-1/4 flex flex-col py-16 px-24 space-y-4'>
      <span class='font-bold text-xl'>Site Map</span>
      <div class='flex flex-col space-y-2'>
        <a href='/' class='group relative'>
          <span>Home</span>
          <span
            class='absolute -bottom-1 left-1/2 w-0 h-1/6 bg-[#664B93] group-hover:w-1/2 group-hover:transition-all duration-700 ease-in-out'
          ></span>
          <span
            class='absolute -bottom-1 right-1/2 w-0 h-1/6 bg-[#664B93] group-hover:w-1/2 group-hover:transition-all duration-700 ease-in-out'
          ></span>
        </a>
        <a href='/aboutUs' class='group relative'>
          <span>About Us</span>
          <span
            class='absolute -bottom-1 left-1/2 w-0 h-1/6 bg-[#664B93] group-hover:w-1/2 group-hover:transition-all duration-700 ease-in-out'
          ></span>
          <span
            class='absolute -bottom-1 right-1/2 w-0 h-1/6 bg-[#664B93] group-hover:w-1/2 group-hover:transition-all duration-700 ease-in-out'
          ></span>
        </a>
        <a href='/service' class='group relative'>
          <span>Services</span>
          <span
            class='absolute -bottom-1 left-1/2 w-0 h-1/6 bg-[#664B93] group-hover:w-1/2 group-hover:transition-all duration-700 ease-in-out'
          ></span>
          <span
            class='absolute -bottom-1 right-1/2 w-0 h-1/6 bg-[#664B93] group-hover:w-1/2 group-hover:transition-all duration-700 ease-in-out'
          ></span>
        </a>
        <a href='/contact' class='group relative'>
          <span>Contact Us</span>
          <span
            class='absolute -bottom-1 left-1/2 w-0 h-1/6 bg-[#664B93] group-hover:w-1/2 group-hover:transition-all duration-700 ease-in-out'
          ></span>
          <span
            class='absolute -bottom-1 right-1/2 w-0 h-1/6 bg-[#664B93] group-hover:w-1/2 group-hover:transition-all duration-700 ease-in-out'
          ></span>
        </a>
      </div>
      <div class='flex flex-col space-y-8'>
        <div class='flex flex-col pt-8'>
          <span class='font-bold text-xl'>Office Hours</span>
          <span class='pt-4'>9:00 AM - 6:00 PM (CST)</span>
          <span>Monday to Friday</span>
          <span>excluding major holidays</span>
        </div>
      </div>
    </div>
    <div class='w-1/4 flex flex-col py-16 px-24 space-y-4'>
      <div class='flex flex-col space-y-2'>
        <span class='font-bold text-xl'>Get In Touch</span>
        <div class="pt-4">
          <span>General Inquiries:</span>
          <span class='text-sm'>info@elysseumgroup.com</span>
          <span class='text-sm'>[ +1-XXX-XXX-XXXX ]</span>
        </div>
        <div class="pt-4">
          <span class='pt-4'>Sales & Business Development:</span>
          <span class='text-sm'>sales@elysseumgroup.com</span>
          <span class='text-sm'>[ +1-XXX-XXX-XXXX ]</span>
        </div>
      </div>
    </div>
    <div class='w-1/4 flex flex-col py-28 px-24'>
      <span>Technical Support:</span>
      <span class='text-sm'>support@elysseumgroup.com</span>
      <span class='text-sm'>[ +1-XXX-XXX-XXXX ]</span>
    </div>
  </div>
  <div
    class='flex flex-row items-center justify-center w-full font-medium text-white text-center py-10'
  >
    <span class='flex'> Copyright &copy; </span>
    <span id='copyright' class='flex'>
      <script>
        document
          .getElementById('copyright')
          .appendChild(
            document.createTextNode(new Date().getFullYear().toString())
          );
      </script>
    </span>
    <span class='flex'> &nbsp;Elysseum </span>
  </div>
</footer>
