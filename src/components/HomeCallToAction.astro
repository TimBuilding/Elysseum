---
import Button from '@/components/ui/button';
---

<div class='relative flex items-center'>
  <div class='w-full h-72'>
    <img
      src='/src/images/Home-CallToAction.jpg'
      alt="Businessman's Finger Pointing at Virtual Icons"
      class='object-cover w-full h-full'
    />
  </div>
  <div
    class='absolute flex flex-col justify-center items-center bg-[rgba(0,0,0,0.7)] h-72 w-full px-24 gap-y-10'
  >
    <span
      class='leading-20 font-sans sm:text-3xl lg:text-4xl xl:text-5xl max-w-6xl font-bold text-center'
      >Learn more about how we can help your business thrive in the digital age.</span
    >
    <Button class='text-sm'>Contact Us</Button>
  </div>
</div>
