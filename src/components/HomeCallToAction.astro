---
import Button from '@/components/ui/button';
---

<div class='h-72'>
  <div
    class='w-full bg-cover h-full relative'
    style="background-image:url('/src/images/Home-CallToAction.jpg')"
  >
    <div class='absolute z-10 bg-black h-full w-full opacity-70'></div>
    <div class='absolute z-20 w-full inset-0'>
      <div class='w-full flex justify-center z-10 h-full backdrop-blur-xl'>
        <div
          class='absolute flex flex-col justify-center items-center h-72 w-full px-24 gap-y-10'
        >
          <span
            class='leading-20 font-sans text-2xl sm:text-3xl lg:text-4xl xl:text-5xl max-w-6xl font-bold text-center'
            >Learn more about how we can help your business thrive in the
            digital age.</span
          >
          <div class="scale-75 sm:scale-90 md:scale-100">
            <Button>Contact Us</Button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
