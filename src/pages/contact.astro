---
import PageLayout from '../layouts/PageLayout.astro';
import ContactForm, { ContactFormProps } from '../components/ContactFormProps';
import Button from '@/components/ui/button';


const contacts: ContactFormProps[] = [
  {
    title: 'Name*:',
    placeholder: 'Name',
    type: 'input',
  },
  {
    title: 'Email:',
    placeholder: 'Email',
    type: 'input',
  },
  {
    title: 'Phone*:',
    placeholder: 'Phone',
    type: 'input',
  },
  {
    title: 'Company:',
    placeholder: 'Company Name',
    type: 'input',
  },
  {
    title: 'Message:',
    placeholder: 'Message',
    type: 'textarea',
  },
];
