---
import PageLayout from '../layouts/PageLayout.astro';
import ContactForm, { ContactFormProps } from '../components/ContactFormProps';
import Button from '@/components/ui/button';

const contacts: ContactFormProps[] = [
  {
    title: 'Name*:',
    placeholder: 'Name',
    type: 'input',
  },
  {
    title: 'Email:',
    placeholder: 'Email',
    type: 'input',
  },
  {
    title: 'Phone*:',
    placeholder: 'Phone',
    type: 'input',
  },
  {
    title: 'Company:',
    placeholder: 'Company Name',
    type: 'input',
  },
  {
    title: 'Message:',
    placeholder: 'Message',
    type: 'textarea',
  },
];
---

<div>
  <PageLayout>
    <div
      class='relative -translate-y-16 -mb-16 flex h-full w-full justify-center bg-cover'
      style="background-image:url('/src/images/Contact.jpg');"
    >
      <div class='absolute bg-black bg-opacity-70 z-5 h-full w-full'></div>
      <div class='w-full inset-0 bg-gradient-to-t from-black from-2%'>
        <div class='w-full flex justify-center z-10 h-full backdrop-blur-3xl'>
          <div class='flex flex-col py-20 w-1/2 items-center mt-20'>
            <p
              class='lg:ml-20 xl:ml-40 font-bold text-3xl lg:text-5xl text-center pb-8 xl:pb-10'
            >
              Contact Us
            </p>
            <div class='flex flex-col gap-4 w-full'>
              {
                contacts.map(({ title, placeholder, type }) => (
                  <ContactForm
                    title={title}
                    placeholder={placeholder}
                    type={type}
                  />
                ))
              }
            </div>
            <div class='lg:ml-20 pt-10 justify-center flex'>
              <Button type='submit' variant='default'>Contact Us</Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </PageLayout>
</div>
