---
import PageLayout from "../layouts/PageLayout.astro";
import ContactForm, {ContactFormProps} from "../components/ContactFormProps";


const contacts: ContactFormProps[] = [
    {
        title: "Name*:",
        placeholder: "Name",
        type: "input"
    },
    {
        title: "Email*:",
        placeholder: "Email",
        type: "input"
    },
    {
        title: "Phone*:",
        placeholder: "Phone",
        type: "input"
    },
    {
        title: "Company:",
        placeholder: "Company Name",
        type: "input"
    },
    {
        title: "Message*:",
        placeholder: "Message",
        type: "textarea"

    }
]

---

<div>
    <PageLayout>
        <div class="pt-20 mb-16">
            <div class="relative flex flex-row">
                <div class="w-[864px] h-[1015px] relative overflow-hidden">
                    <img src="/src/images/Contact.jpg" alt="Bottom View of a High-Rise Building"
                         class="h-full w-full object-cover">
                    <div class="absolute inset-0 bg-gradient-to-l from-black from-2%" />
                </div>
                <div class="absolute flex flex-row w-full">
                    <div class="h-[1015px] w-[864px] flex flex-row justify-end">
                    </div>
                    <div class="w-1/2 flex flex-col pt-10">
                        <div>
                            <p class="font-bold text-5xl text-center pb-[60px]">Contact Us</p>
                        </div>
                        <div class="flex flex-col gap-4">
                            {contacts.map(({title, placeholder, type}) => <ContactForm title={title} placeholder={placeholder} type={type} />)}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </PageLayout>

</div>