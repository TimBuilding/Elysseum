---
import PageLayout from '../layouts/PageLayout.astro';
import Services from '../components/Services';
---

<PageLayout>
  <div class='flex flex-col'>
    <div class='-mt-16 h-96 -z-10'>
      <div
        class='h-full relative'
        style='background-image:url("/src/images/Services.svg")'
      >
        <div class="absolute z-10 bg-black h-full w-full opacity-75"></div>
        <div
          class='absolute px-24 w-full top-1/3 xl:bottom-10 mx-auto space-y-8 xl:space-y-0 z-10 flex flex-col xl:flex-row'
        >
          <h1
            class='font-bold text-3xl xl:text-6xl xl:flex xl:py-10 xl:px-24 text-center xl:w-1/2'
          >
            Our Services
          </h1>
          <p
            class='font-medium text-xl max-w-xl text-center mx-auto xl:flex xl:items-center xl:text-start xl:h-full xl:max-w-5xl xl:w-full xl:text-3xl'
          >
            Here at Elysseum, we offer comprehensive services to help
            businesses, from startups to large corporations, leverage technology
            to achieve their goals and overcome challenges.
          </p>
        </div>
      </div>
    </div>
  </div>
  <Services client:load />
</PageLayout>
