---
import PageLayout from '../layouts/PageLayout.astro';
import Services from '../components/Services';
---

<PageLayout>
  <div class='flex flex-col'>
    <div class='-translate-y-16'>
      <div class='h-96 mix-blend-overlay relative'>
        <div class='absolute w-full top-1/3 mx-auto space-y-8 z-10'>
          <h1 class='font-bold text-3xl text-center'>Our Services</h1>
          <p class='font-medium text-lg max-w-lg text-center mx-auto'>
            Here at Elysseum, we offer comprehensive services to help
            businesses, from startups to large corporations, leverage technology
            to achieve their goals and overcome challenges.
          </p>
        </div>
        <img
          src='/src/images/Services.svg'
          class='object-cover h-96 w-full opacity-30'
          alt=''
        />
        <div
          class='absolute -z-10 bg-gradient-to-t to-black from-white top-1/3 w-full'
        >
        </div>
      </div>
    </div>
    <Services client:load />
    </div>
</PageLayout>
